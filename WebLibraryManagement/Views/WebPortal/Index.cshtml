@model HomeModel
@{
    Layout = "~/Views/WebPortal/Shared/_LayoutWebPortal.cshtml";
}
@section title
{
    @ResourceManagement.GetResourceText("SystemResourceID.WebPortal", "Cổng thông tin thư viện", "Library Web Portal")
}
<!-- BEGIN: PAGE CONTENT -->
<!-- BEGIN: LAYOUT/SLIDERS/REVO-SLIDER-4 -->
<section class="c-layout-revo-slider c-layout-revo-slider-4" dir="ltr">
    <div class="tp-banner-container c-theme">
        <div class="tp-banner rev_slider" data-version="5.0">
            <ul>
                <!--BEGIN: SLIDE #1 -->
                @if (Model.Slide != null && Model.Slide.Any())
                {
                    foreach (var slide in Model.Slide)
                    {
                        <li data-transition="fade" data-slotamount="1" data-masterspeed="1000">
                            <img alt="" src="/webportal/viewnewsimage/?id=@slide.Id" data-bgposition="center center" data-bgfit="cover" data-bgrepeat="no-repeat">
                            <div class="tp-caption customin customout" data-x="center" data-y="center" data-hoffset="" data-voffset="-50" data-speed="500" data-start="1000" data-transform_idle="o:1;" data-transform_in="rX:0.5;scaleX:0.75;scaleY:0.75;o:0;s:500;e:Back.easeInOut;"
                                 data-transform_out="rX:0.5;scaleX:0.75;scaleY:0.75;o:0;s:500;e:Back.easeInOut;" data-splitin="none" data-splitout="none" data-elementdelay="0.1" data-endelementdelay="0.1" data-endspeed="600">
                            </div>
                            <div class="tp-caption lft" data-x="center" data-y="center" data-voffset="110" data-speed="900" data-start="2000" data-transform_idle="o:1;" data-transform_in="x:100;y:100;rX:120;scaleX:0.75;scaleY:0.75;o:0;s:500;e:Back.easeInOut;"
                                 data-transform_out="x:100;y:100;rX:120;scaleX:0.75;scaleY:0.75;o:0;s:500;e:Back.easeInOut;">
                                <a href="/webportal/newsdetail?id=@slide.Id" class="c-action-btn btn btn-lg c-btn-square c-theme-btn c-btn-bold c-btn-uppercase">Chi tiết</a>
                            </div>
                        </li>
                    }
                }
            </ul>
        </div>
    </div>
</section>
<!-- END: LAYOUT/SLIDERS/REVO-SLIDER-4 -->
<!-- BEGIN: CONTENT/MISC/SUBSCRIBE-FORM-1 -->
<div class="c-content-box c-size-sm c-bg-blue-2">
    <div class="container">
        <div class="c-content-subscribe-form-1">
            <div class="row">
                <div class="col-sm-6">
                    <h3 class="c-title c-font-30 c-font-uppercase c-font-bold">TÌM SÁCH VÀ TÀI LIỆU</h3>
                    <div class="c-body c-font-14">Thư viện hiện có rất nhiều loại sách giáo khoa, báo và tạp chí,...</div>
                </div>
                <div class="col-sm-6">
                    <form action="#">
                        <div class="input-group input-group-lg">
                            <input type="text" class="form-control input-lg" placeholder="Nội dung tìm...">
                            <span class="input-group-btn">
                                <button type="submit" class="btn c-theme-btn c-btn-uppercase btn-lg c-btn-bold c-btn-square">TÌM KIẾM</button>
                            </span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END: CONTENT/MISC/SUBSCRIBE-FORM-1 -->
<!-- BEGIN: CONTENT/MISC/WHY-CHOOSE-US-1 -->
<div class="c-content-box c-size-lg c-bg-grey-1">
    <div class="container">
        <div class="">
            <div class="row">
                <div class="col-md-7">
                    <div class="c-content-feature-5">
                        <div class="c-content-title-1 wow amimate fadeInDown">
                            <h3 class="c-left c-font-dark c-font-bold">
                                Dịch vụ
                                <br />THƯ VIỆN
                            </h3>
                            <div class="c-line-left c-bg-blue-3 c-theme-bg"></div>
                        </div>
                        <div class="c-text wow animate fadeInLeft">Với hệ thống thư viện thông minh, học sinh dễ dàng tìm tài liệu cho môn học một cách chính xác, kịp thời. </div>
                        <button type="submit" class="btn c-btn-uppercase btn-md c-btn-bold c-btn-square c-theme-btn wow animate fadeIn">XEM THÊM</button>
                        <img class="c-photo img-responsive wow animate fadeInUp" width="420" alt="" src="~/Content/webportal/img/pic1.jpg" />
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="c-content-accordion-1 c-theme wow animate fadeInRight">
                        <div class="panel-group-right">
                            <div class="panel-head">
                                <div class="panel-item panel-heading">
                                    <h4 class="c-font-uppercase c-font-bold c-font-19">
                                        THỜI GIAN MỞ CỬA
                                    </h4>
                                    <div class="panel-body c-font-17">
                                        Thứ 2 - Thứ 7  (8:00 SA - 5:00 CH)
                                        <br />Chủ nhật và các ngày lễ: Nghỉ
                                    </div>
                                </div>
                                <div>

                                </div>
                            </div>
                            <div class="panel-item">
                                <a class="c-font-uppercase c-font-bold c-font-19" href="#">ĐĂNG KÝ LÀM THẺ</a>
                            </div>
                            <div class="panel-item">
                                <a class="c-font-uppercase c-font-bold c-font-19" href="#">ĐĂNG KÝ PHÒNG HỌC NHÓM</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END: CONTENT/MISC/WHY-CHOOSE-US-1 -->
<!-- BEGIN: CONTENT/SLIDERS/CLIENT-LOGOS-2 -->
<div class="c-content-box c-size-md c-bg-white sachmoi">
    <div class="container">
        <!-- Begin: Testimonals 1 component -->
        <div class="c-content-client-logos-slider-1  c-bordered" data-slider="owl">
            <!-- Begin: Title 1 component -->
            <div class="c-content-title-1">
                <h3 class="c-center c-font-uppercase c-font-bold">GIỚI THIỆU SÁCH MỚI</h3>
                <div class="c-line-center c-theme-bg"></div>
            </div>
            <!-- End-->
            <!-- Begin: Owlcarousel -->
            <div class="owl-carousel owl-theme c-theme owl-bordered1 c-owl-nav-center" data-items="6" data-desktop-items="5" data-desktop-small-items="3" data-tablet-items="3" data-mobile-small-items="2" data-slide-speed="5000" data-rtl="false">
                @if (Model.Books != null && Model.Books.Any())
                {
                    foreach (var book in Model.Books)
                    {
                        <div class="item">
                            <a href="/webportal/booksdetail?id=@book.Id">
                                <img src="/webportal/viewbookimage?id=@book.Id" 
                                     alt="" title="@book.Title" />
                            </a>
                        </div>

                    }
                }
            </div>
            <!-- End-->
        </div>
        <!-- End-->
    </div>
</div>
<!-- END: CONTENT/SLIDERS/CLIENT-LOGOS-2 -->
<!-- BEGIN: CONTENT/BLOG/RECENT-POSTS -->
<div class="c-content-box c-size-md c-bg-grey-1">
    <div class="container">
        <!-- Begin: Testimonals 1 component -->
        <div class="c-content-blog-post-card-1-slider" data-slider="owl">
            <!-- Begin: Title 1 component -->
            <div class="c-content-title-1">
                <h3 class="c-center c-font-uppercase c-font-bold">Tin tức & Sự kiện</h3>
                <div class="c-line-center c-theme-bg"></div>
            </div>
            <!-- End-->
            <!-- Begin: Owlcarousel -->
            <div class="owl-carousel owl-theme c-theme c-owl-nav-center" data-items="3" data-slide-speed="8000" data-rtl="false">
                @if (Model.News != null && Model.News.Any())
                {
                    foreach (var news in Model.News)
                    {
                        <div class="item">
                            <div class="c-content-blog-post-card-1 c-option-2">
                                <div class="c-media c-content-overlay">
                                    <img class="c-overlay-object img-responsive" src="/webportal/viewnewsimage/?id=@news.Id" alt="">
                                </div>
                                <div class="c-body">
                                    <div class="c-date">@news.DisplayPublishDate</div>
                                    <div class="c-title c-font-bold">
                                        <a href="/webportal/newsdetail?id=@news.Id">
                                            @news.Title
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
            <!-- End-->
        </div>
        <!-- End-->
    </div>
</div><!-- END: CONTENT/BLOG/RECENT-POSTS -->
<!-- END: PAGE CONTENT -->
