@model BookRightMenuModel
@{
    Layout = null;
}
<!-- BEGIN: CONTENT/BLOG/BLOG-SIDEBAR-1 -->
<div class="c-content-tab-1 c-theme">
    <div class="nav">
        <ul class="nav nav-tabs">
            <li class="c-title c-font-bold c-font-uppercase active"><a href="#blog_recent_posts" data-toggle="tab">Sách liên quan</a></li>
            <li class="c-title c-font-bold c-font-uppercase"><a href="#blog_popular_posts" data-toggle="tab">Sách đọc nhiều</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="blog_recent_posts">
                <ul class="c-content-recent-posts-1">
                    @if (Model.RelatedBooks != null && Model.RelatedBooks.Any())
                    {
                        foreach (var item in Model.RelatedBooks)
                        {
                            <li>
                                <div class="c-image">
                                    <img src="/webportal/viewbookimage/?id=@item.BibliographicId" alt="" class="img-responsive">
                                </div>
                                <div class="c-post">
                                    <a href="/webportal/booksdetail?id=@item.BibliographicId" class="c-title">
                                        @item.Title
                                    </a>
                                    <div class="c-date">Tác giả: @item.Author</div>
                                    <div class="c-date">NXB: @item.Publisher</div>
                                </div>
                            </li>
                        }
                    }
                </ul>
            </div>
            <div class="tab-pane" id="blog_popular_posts">
                <ul class="c-content-recent-posts-1">
                    @if (Model.MostReadBooks != null && Model.MostReadBooks.Any())
                    {
                        foreach (var item in Model.MostReadBooks)
                        {
                            <li>
                                <div class="c-image">
                                    <img src="/webportal/viewbookimage/?id=@item.BibliographicId" class="img-responsive" alt="" />
                                </div>
                                <div class="c-post">
                                    <a href="/webportal/booksdetail?id=@item.BibliographicId" class="c-title">
                                        @item.Title
                                    </a>
                                    <div class="c-date">Tác giả: @item.Author</div>
                                    <div class="c-date">NXB: @item.Publisher</div>
                                </div>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="c-content-ver-nav">
    <div class="c-content-title-1 c-theme c-title-md c-margin-t-40">
        <h3 class="c-font-bold c-font-uppercase">TIN Mới NHẤT</h3>
        <div class="c-line-left c-theme-bg"></div>
    </div>
    <ul class="c-menu c-arrow-dot1 c-theme">
        @if (Model.NewestNews != null && Model.NewestNews.Any())
        {
            foreach (var item in Model.NewestNews)
            {
                <li><a href="/webportal/newsdetail?id=@item.Id">@item.Title</a></li>
            }
        }
    </ul>
</div>
<div class="c-content-ver-nav">
    <div class="c-content-title-1 c-theme c-title-md c-margin-t-40">
        <h3 class="c-font-bold c-font-uppercase">TIN ĐỌC NHIỀU</h3>
        <div class="c-line-left c-theme-bg"></div>
    </div>
    <ul class="c-menu c-arrow-dot1 c-theme">
        @if (Model.MostReadNews != null && Model.MostReadNews.Any())
        {
            foreach (var item in Model.MostReadNews)
            {
                <li><a href="/webportal/newsdetail?id=@item.Id">@item.Title</a></li>
            }
        }
    </ul>
</div>
<!-- END: CONTENT/BLOG/BLOG-SIDEBAR-1 -->